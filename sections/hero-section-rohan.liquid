{% schema %}
{
  "name": "Hero Section Rohan",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the perfect gift for your loved ones."
    },
    {
      "type": "text",
      "id": "header_button_text",
      "label": "Header Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "header_button_link",
      "label": "Header Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
